                                    Header="Имя"/>

                <DataGridTextColumn x:Name="Automobile" 
                                    Binding="{Binding Automobile}" 
                                    Header="Машина"/>

                <DataGridTextColumn x:Name="PhoneNumber" 
                                    Binding="{Binding PhoneNumber}" 
                                    Header="Телефон"/>



            </DataGrid.Columns>
