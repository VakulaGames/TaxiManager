    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>

            <GridSplitter 
                Grid.Column="1"
                Grid.RowSpan="1"
                HorizontalAlignment="Right"
                Width="4"
                Background="Black">
            </GridSplitter>

            <GridSplitter
                Grid.Column="0"
                Grid.RowSpan="1"
                HorizontalAlignment="Right"
                Width="4"
                Background="Black">
            </GridSplitter>

            <Grid
                Grid.Column="2">

                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="20*"/>
                    <RowDefinition Height="4*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Border
                        Grid.Column="0"
                        Margin="3" 
                        Background="White"
                        VerticalAlignment="Center"
                        Padding="1"
                        CornerRadius="5"
                        Cursor="Hand">
                        <TextBlock Text="Новые" 
                                   FontSize="15" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                    </Border>
                    <Border
                        Grid.Column="1"
                        Margin="3" 
                        Background="Gray"
                        VerticalAlignment="Center"
                        Padding="1"
                        CornerRadius="5">
                        <TextBlock Text="На линии" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <Border
                        Grid.Column="2"
                        Margin="3" 
                        Background="Gray"
                        VerticalAlignment="Center"
                        Padding="1"
                        CornerRadius="5">
                        <TextBlock Text="Все" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                </Grid>
                <ListView Grid.Row="1"
                    x:Name="driverList"
                    Style="{DynamicResource MaterialDesignListView}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn 
                                Header="Позывной" 
                                DisplayMemberBinding="{Binding CallSign}"/>
                            <GridViewColumn 
                                Header="Имя" 
                                DisplayMemberBinding="{Binding Name}"/>
                            <GridViewColumn 
                                Header="Автомобиль" 
                                DisplayMemberBinding="{Binding Automobile}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
                <Image HorizontalAlignment="Left" Height="100" Margin="42,34,0,0" Grid.Row="2" VerticalAlignment="Top" Width="100"/>

            </Grid>
            <TabControl Grid.Column="1">
                <TabItem Header="TabItem">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="TabItem">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>
